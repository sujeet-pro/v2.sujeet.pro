---
import Link from "./footer-item-link.astro"
export type Props = Record<string, never>
const currentYear = new Date().getFullYear()
---

<footer class="footer">
  <div class="container">
    <nav class="footer-nav">
      <ul class="footer-list">
        <li class="footer-list-item-heading">Community</li>
        <Link isExternal text="LinkedIn" href="/in" iconName="mdi:linkedin" />
        <Link isExternal text="Github" href="/gh" iconName="mdi:github" />
        <Link isExternal text="Stackoverflow" href="/stackoverflow" iconName="mdi:stackoverflow" />
        <!-- <Link isExternal text="X (Twitter)" href="/x" iconName="mdi:twitter" /> -->
        <!-- <Link isExternal text="Mastodon" href="https://mastodon.social/@sujeetjaiswal" iconName="mdi:mastodon" /> -->
        <!-- <Link isExternal text="Instagram" href="/ig" iconName="mdi:instagram" /> -->
      </ul>
      <ul class="footer-list">
        <li class="footer-list-item-heading">Write Ups</li>
        <Link text="Blogs" href="/blog/" iconName="mdi:blog" />
        <Link text="Series" href="/series/" iconName="mdi:notebook-edit-outline" />
        <Link text="Topics" href="/topic/" iconName="mdi:tag-outline" />
      </ul>
      <ul class="footer-list">
        <li class="footer-list-item-heading">Site</li>
        <Link text="FAQs" href="/faq/" iconName="mdi:faq" />
        <Link text="Projects" href="/project/" iconName="mdi:responsive" />
        <Link text="Skills" href="/skills/" iconName="carbon:skill-level-advanced" />
        <Link isExternal text="CV" href="/cv" iconName="mdi:file-chart-outline" />
      </ul>
    </nav>
    <small class="copy-text text-center">&copy; {currentYear} Sujeet Jaiswal</small>
  </div>
</footer>

<style>
  @layer component.layout-footer {
    .footer {
      border-top: var(--sp-space-1) solid var(--sp-border-color);
    }
    .footer-nav {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: var(--sp-space-6);
    }
    .footer-list {
      display: flex;
      flex-direction: column;
      gap: var(--sp-space-3);
      list-style: none;
      padding-inline-start: 0;
      margin-block: 0;
    }

    .footer-list-item-heading {
      font-weight: bold;
      margin-bottom: var(--sp-space-4);
    }

    .copy-text {
      display: block;
      margin-top: var(--sp-space-6);
      width: 100%;
    }
  }
</style>

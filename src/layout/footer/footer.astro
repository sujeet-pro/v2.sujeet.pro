---
import Link from "./footer-item-link.astro"
export type Props = Record<string, never>
const currentYear = new Date().getFullYear()
---

<footer>
  <div class="container">
    <nav>
      <ul>
        <li>Social</li>
        <Link text="LinkedIn" href="/in" iconName="mdi:linkedin" />
        <!-- <Link text="X (Twitter)" href="/x" iconName="mdi:twitter" /> -->
        <!-- <Link text="Mastodon" href="https://mastodon.social/@sujeetjaiswal" iconName="mdi:mastodon" /> -->
        <!-- <Link text="Instagram" href="/ig" iconName="mdi:instagram" /> -->
        <Link text="CV" href="/cv" iconName="ph:file-doc" />
      </ul>
      <ul>
        <li>Community</li>
        <Link text="Github" href="/gh" iconName="mdi:github" />
        <Link text="Stackoverflow" href="/stackoverflow" iconName="mdi:stackoverflow" />
        <!-- <Link text="Dev.to" href="/dev-to" iconName="mdi:dev-to" /> -->
        <!-- <Link text="Hashnode" href="/hashnode" iconName="simple-icons:hashnode" /> -->
        <!-- <Link text="Medium" href="/medium" iconName="community-medium" /> -->
      </ul>
      <ul>
        <li>Site</li>
        <Link text="FAQs" href="/faq/" iconName="wpf:faq" />
        <Link text="Projects" href="/projects/" iconName="mdi:responsive" />
        <Link text="Skills" href="/skills/" iconName="carbon:skill-level-advanced" />
      </ul>
    </nav>
    <small>&copy; {currentYear} Sujeet Jaiswal</small>
  </div>
</footer>

<style>
  @layer component {
    footer {
      border-top: var(--sp-space-1) solid var(--sp-border-color);
    }
    nav {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: var(--sp-space-6);
    }
    ul {
      display: flex;
      flex-direction: column;
      gap: var(--sp-space-3);
      list-style: none;
      padding-inline-start: 0;
      margin-block: 0;
    }

    li:first-child {
      font-weight: bold;
      margin-bottom: var(--sp-space-4);
    }

    small {
      text-align: center;
      display: block;
      margin-top: var(--sp-space-6);
      width: 100%;
    }
  }
</style>

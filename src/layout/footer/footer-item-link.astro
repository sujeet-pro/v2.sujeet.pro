---
import { Icon } from "astro-icon"
import { Link } from "$components"

type Props = {
  href: string
  isExternal?: boolean | undefined
  iconName: string
  text: string
}

const { href, iconName, text, isExternal } = Astro.props
---

<li>
  <Link {href} {isExternal} class="link">
    <Icon class="icon" name={iconName} />
    <span class="text">
      <slot>{text}</slot>
    </span>
  </Link>
</li>

<style>
  @layer component {
    .link {
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .text {
      width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
</style>

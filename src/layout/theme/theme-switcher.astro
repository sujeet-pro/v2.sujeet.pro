---
import { Icon } from "astro-icon"

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = Record<string, never>
---

<button disabled id="theme-switcher" class="p-2 w-12 h-12" title="Toggle Dark Mode">
  <span class="switch-to-dark-theme">
    <Icon name="carbon:moon" />
    <span class="sr-only">Switch to Dark Theme</span>
  </span>
  <span class="switch-to-light-theme">
    <Icon name="carbon:sun" />
    <span class="sr-only">Switch to Light Theme</span>
  </span>
</button>

<style>
  #theme-switcher {
  }
  #theme-switcher .switch-to-light-theme {
    display: none;
  }
  :global(.dark) #theme-switcher .switch-to-light-theme {
    display: initial;
  }
  :global(.dark) #theme-switcher .switch-to-dark-theme {
    display: none;
  }
</style>

<script>
  import { getClassNameWithPrefix, removeClassNameWithPrefix, getNextTheme } from "./class-utils"
  try {
    const themeSwitcherBtn = document.querySelector<HTMLButtonElement>("button#theme-switcher")
    if (themeSwitcherBtn) {
      themeSwitcherBtn.removeAttribute("disabled")
      themeSwitcherBtn.addEventListener("click", () => {
        const classsList = document.documentElement.classList
        const currentTheme = getClassNameWithPrefix(classsList, "theme-")
        removeClassNameWithPrefix(classsList, "theme-")
        const nextTheme = getNextTheme(currentTheme)
        localStorage.setItem("theme", nextTheme)
        document.documentElement.classList.add(nextTheme)
      })
    }
  } catch {}
</script>

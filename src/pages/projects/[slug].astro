---
import type { InferGetStaticPropsType } from "astro"
import { getCollection, getEntry } from "astro:content"
// import { Image } from "astro:assets"
import Layout from "$layout/base-layout.astro"
import { Article } from "$components"
import CompanyCard from "$modules/company/company-card.astro"
import Breadcrum from "src/components/breadcrumb/breadcrum.astro"

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection("project", ({ data }) => {
    return import.meta.env.PROD ? !data.isDraft : true
  })
  const pages = blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry: entry },
  }))

  return pages
}

type Props = InferGetStaticPropsType<typeof getStaticPaths>

// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props
const { title, description, company } = entry.data
const { Content } = await entry.render()
const companyDetails = await getEntry(company)
---

<Layout {title} {description}>
  <Breadcrum parentPageHref="/projects" parentPageTitle="Projects" currentPageTitle={title} />
  <main>
    <Article prose>
      <CompanyCard entry={companyDetails} />
      <hr />
      <h1>{title}</h1>
      <Content />
    </Article>
  </main>
</Layout>

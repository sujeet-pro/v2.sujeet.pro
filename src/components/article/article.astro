---
type Props = {
  prose?: boolean
  class?: string | undefined | null
}
const { prose, class: className } = Astro.props
---

<article
  class:list={[
    {
      "prose prose-xl prose-slate dark:prose-invert mx-auto my-8 text-justify w-full": prose,
    },
    className,
  ]}
>
  <slot />
</article>

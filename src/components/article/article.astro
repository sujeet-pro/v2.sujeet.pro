---
type Props = {
  class?: string | undefined | null
}
const { class: className } = Astro.props
---

<article class:list={["markdown-article", className]}>
  <slot />
</article>

<style is:global>
  @layer component {
    .markdown-article {
      ul {
        list-style: initial;
      }
    }
  }
</style>

---
import { Link } from "./link"
type Props = {
  title: string
  description: string
  href: string
}
const { title, description, href } = Astro.props
---

<article class="card">
  <Link class="card-link" {href}>{title}</Link>
  <p class="card-description">{description}</p>
  <slot />
</article>

<style>
  @layer component.card {
    .card {
      position: relative;
      padding: var(--sp-font-size-3);
      border-bottom: var(--sp-space-1) solid transparent;
      transition: background-color 0.25s;

      &:hover,
      &:focus-within {
        background-color: var(--sp-background-950);
      }
      &:not(:last-child) {
        border-bottom-color: var(--sp-border-color);
      }
    }
    .card-link {
      font-size: var(--sp-font-size-5);
      &::before {
        content: " ";
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
      }
    }
    .card-description {
      margin: var(--sp-space-2) 0;
    }
  }
</style>
